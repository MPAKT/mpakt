<div class="header">
  <div>
    <div class="rainbow">
      <%= link_to "/" do %>
        <span class="logo"><%= t(".title") %></span>
      <% end %>
    </div>
  </div>

  <% if request.controller_class.to_s.start_with?("Thredded") %>
    <!-- Do nothing -->
  <% else %>
    <div class="menu-holder">
      <% if current_user %>
        <div class="link-holder end">
          <%= link_to destroy_user_session_path, method: :delete do %>
            <div class="link"><%= t(".exit") %></div>
          <% end %>
        </div>
      <% elsif request.path %>
        <div class="link-holder end">
          <%= link_to new_user_session_path do %>
            <div class="link"><%= t(".sign_in") %></div>
          <% end %>
        </div>
      <% end %>

      <div class="link-holder">
        <%= link_to privileges_path do %>
          <div class="link"><%= t(".privilege") %></div>
        <% end %>
      </div>
      <div class="link-holder">
        <%= link_to "/forum" do %>
          <div class="link"><%= t(".forum") %></div>
        <% end %>
      </div>
      <div class="link-holder">
        <% if current_user&.admin? %>
          <%= link_to users_path do %>
            <div class="link"><%= t(".users") %></div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
