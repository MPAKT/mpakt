<div class="menu-holder">
  <div class="center menu">
    <% if current_user %>
      <div class="link-holder">
        <%= link_to main_app.edit_user_path(current_user) do %>
          <div class="link"><%= t(".card") %></div>
        <% end %>
      </div>
    <% end %>

    <div class="link-holder">
      <%= link_to main_app.blogs_path do %>
        <div class="link"><%= t(".blog") %></div>
      <% end %>
    </div>

    <div class="link-holder">
      <%= link_to "/forum" do %>
        <div class="link"><%= t(".forum") %></div>
      <% end %>
    </div>

    <div class="link-holder">
      <% if current_user %>
        <%= link_to "/forum/private-topics" do %>
          <div class="link"><%= t(".messages") %></div>
        <% end %>
      <% else %>
        <%= link_to main_app.new_user_registration_path do %>
          <div class="link"><%= t(".join") %></div>
        <% end %>
      <% end %>
    </div>

    <% if current_user&.admin? %>
      <div class="link-holder">
        <%= link_to "/salaries" do %>
          <div class="link"><%= t(".salaries") %></div>
        <% end %>
      </div>
      <div class="link-holder">
        <%= link_to "/users" do %>
          <div class="link"><%= t(".users") %></div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
