<div class="devise-links mini-section">
  <%- if controller_name != 'sessions' %>
    <span class="italic-min"><%= link_to t(".sign_in"), new_session_path(resource_name) %></span><br />
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <span class="italic-min"><%= link_to t(".sign_up"), new_registration_path(resource_name) %></span><br />
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <span class="italic-min"><%= link_to t(".forgot_password"), new_password_path(resource_name) %></span><br />
  <% end %>
</div>
