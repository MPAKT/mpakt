<h1><%= t(".title") %></h1>

<% if current_user&.admin? %>
  <div><%= link_to t(".create"), new_blog_path, class: "btn right" %></div>
<% end %>

<div class="blogs">
  <% @blogs.each do |blog| %>
    <div class="blog-holder">
      <%= link_to blog_path(blog) do %>
        <div class="blog">
          <div class="image-holder">
            <%= image_tag blog.image.strip if blog.image %>
          </div>
          <h3><%= blog.title %></h3>
          <div><%= blog.summary %></div>
          <div class="strong"><%= t(".published") if blog.publish? %></div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
