<div class="wide">
  <%= simple_form_for blog do |f| %>
    <%= f.input :title, as: :string %>
    <%= f.input :summary, as: :string %>
    <%= f.input :image, as: :string, placeholder: t(".image_info") %>

    <%= f.input :description %>


    <div class="central">
      <%= f.input :publish %>

      <%= f.submit t(".submit"), class: "btn" %>

      <div class="minisection">
        <%= link_to blogs_path do %>
          <span class="btn secondary"><%= t(".cancel") %></span>
        <% end %>
      </div>

      <% if blog.id %>
        <div class="minisection">
          <%= link_to blog_path(blog), method: :delete do %>
            <span class="btn secondary"><%= t(".delete") %></span>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
